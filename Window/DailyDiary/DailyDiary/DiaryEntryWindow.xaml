<Window x:Class="DailyDiary.DiaryEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyDiary"
        mc:Ignorable="d"
        Title="일기" Height="400" Width="300">
    <StackPanel Margin="10">
        <TextBlock Name="txtDate" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox Name="txtTitle"  Margin="0,0,0,10"/>
        <TextBox Name="txtContent"  AcceptsReturn="True" Height="200" Margin="0,0,0,10"/>
        <Button Content="Save" Click="SaveButton_Click" Margin="0,10,0,0" />
        <Button Content="Update" Click="UpdateButton_Click" Margin="0,5,0,0" />
        <Button Content="Delete" Click="DeleteButton_Click" Margin="0,5,0,0" />

    </StackPanel>
</Window>
