<Window x:Class="DailyDiary.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyDiary"
        mc:Ignorable="d"
        Title="로그인" Height="300" Width="300">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBox Name="txtUsername" Text="User ID" Foreground="Gray"
             GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder" Margin="0,0,0,10"/>
            <PasswordBox Name="txtPassword" Margin="0,0,0,10" />
            <Button Content="Login" Click="LoginButton_Click" />
        </StackPanel>

    </Grid>
</Window>
