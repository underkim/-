<Window x:Class="DailyDiary.Views.DiaryEntryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="일기 작성" Height="500" Width="400" Background="#FAFAFA">

    <Grid Margin="20">
        <!-- 날짜 표시 -->
        <TextBlock x:Name="DateLabel" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="0,10,0,20" TextAlignment="Center" />

        <!-- 일기 내용 입력 -->
        <TextBox x:Name="DiaryTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap" FontSize="14" Margin="0,50,0,100"
                 Background="#FFFFFF" BorderBrush="#DDDDDD" />

        <!-- 버튼 패널 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" >
            <!-- 저장 버튼 -->
            <Button Content="저장" Width="80" Height="30" Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" Click="SaveButton_Click"  />

            <!-- 삭제 버튼 -->
            <Button Content="삭제" Width="80" Height="30" Background="#F44336" Foreground="White" 
                    FontWeight="Bold" Click="RemoveButton_Click"  />
        </StackPanel>
    </Grid>
</Window>
